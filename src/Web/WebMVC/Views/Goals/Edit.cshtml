@{
    ViewData["Title"] = "Edit";
@model WebMVC.ViewModels.GoalViewModels.EditViewModel
        }
<h2>Edit</h2>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Goal.Id" />
            <div class="form-group">
                <label asp-for="Goal.Name" class="control-label"></label>
                <input asp-for="Goal.Name" class="form-control" />
                <span asp-validation-for="Goal.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Goal.Description" class="control-label"></label>
                <input asp-for="Goal.Description" class="form-control" />
                <span asp-validation-for="Goal.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Goal.TargetDate" class="control-label"></label>
                <input asp-for="Goal.TargetDate" class="form-control" />
                <span asp-validation-for="Goal.TargetDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-area="" asp-controller="Goals" asp-action="Index">Back to List</a>
</div>
