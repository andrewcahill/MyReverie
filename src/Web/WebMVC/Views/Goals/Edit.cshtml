@{
    ViewData["Title"] = "Edit";
@model WebMVC.ViewModels.GoalViewModels.EditViewModel
        }
<h2>Edit</h2>

<div>
    <h4>@Html.DisplayNameFor(model => model.Goal.Name)</h4>
    <hr />
    @Html.DisplayFor(model => model.Goal.Name)
</div>


<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Goal.Id" />
            <div class="form-group">
                <label asp-for="Goal.Name" class="control-label"></label>
                <input asp-for="Goal.Name" class="form-control" />
                <span asp-validation-for="Goal.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>
